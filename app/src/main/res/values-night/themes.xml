<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ダークモード用テーマ -->
    <!-- Androidがダークモード時に values-night/themes.xml を自動的に読み込む -->
    <style name="Theme.Memoripass" parent="Theme.Material3.Dark.NoActionBar">

        <!-- Primary Colors（ダークモードでは明るめに） -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnPrimaryContainer">@color/primary_light</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryContainer">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSecondaryContainer">@color/secondary_light</item>

        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/tertiary_light</item>
        <item name="colorTertiaryContainer">@color/tertiary_dark</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorOnTertiaryContainer">@color/tertiary_light</item>

        <!-- Error Colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Background & Surface（暗い背景） -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_dark</item>

        <!-- Outline -->
        <item name="colorOutline">@color/outline</item>
        <item name="colorOutlineVariant">@color/outline_variant</item>

        <!-- Window -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/surface_dark</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Memoripass.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Memoripass.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Memoripass.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Memoripass.Body2</item>

        <!-- Component Styles -->
        <item name="materialButtonStyle">@style/Widget.Memoripass.Button</item>
        <item name="floatingActionButtonStyle">@style/Widget.Memoripass.FloatingActionButton</item>
        <item name="textInputStyle">@style/Widget.Memoripass.TextInputLayout</item>
    </style>

</resources>
